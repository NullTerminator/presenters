Voom::Presenters.define(:search_field) do
  content id: :search_field do
    text_field name: :search, full_width: false do
      label 'Find waldo'
      icon :close do
        event :click do
          replaces :search_field, :search_field
        end
      end
      event :input do
        autocomplete '/_search_'
      end
      event :change do
        posts '/_search_', redirect: '/search_results'
      end
    end
  end
end
