Voom::Presenters.define(:drawers) do
  attach :top_nav

  drawer do
    menu do
      item 'About (Drawer)' do
        event :click do
          loads :index
        end
      end

      item 'Components (Drawer)' do
        event :click do
          loads :components
        end
      end

      item 'Styles (Drawer)' do
        event :click do
          loads :styles
        end
      end
    end
  end

  attach :grid do
    display 'Drawers'

    attach :code, file: __FILE__
  end
end