Voom::Presenters.define('pattern_menu') do
  helpers Voom::Presenters::Helpers::Inflector
  menu side: :left do
    %i(search_select floating_card).sort.each do |pattern|
      item titleize(pattern), selected: context['_presenter_']== pattern.to_s  do
        event :click do
          loads pattern
        end
      end
    end
  end
end
