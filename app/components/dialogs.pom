Voom::Presenters.define(:dialogs) do
  attach :top_nav
  attach :component_drawer

  attach :grid do
    display 'Dialogs'

    button 'Show Dialog', dialog: :hold_on

    dialog id: :hold_on do
      title "MDL Dialog"
      paragraph 'This is an example of the Material Design Lite dialog component. Please use responsibly.'

      button 'Disabled action', disabled: true
      button 'Close'
    end

    attach :code, file: __FILE__
  end
end