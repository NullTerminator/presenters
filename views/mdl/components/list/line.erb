<li class="mdl-list__item<%if line.subtitle%> mdl-list__item--two-line<%end%><%if line.body%> mdl-list__item--three-line<%end%>">
  <span class="mdl-list__item-primary-content">
    <%= erb :"components/list/icon", :locals => {:line => line} %>
    <%= erb :"components/list/avatar", :locals => {:line => line} %>
    <span><%= line.text %></span>
    <% if line.subtitle %><span class="mdl-list__item-sub-title"><%=line.subtitle%></span><%end%>
    <% if line.body %><span class="mdl-list__item-text-body"><%=line.body%></span><%end%>
  </span>
  <span class="mdl-list__item-secondary-content">
  <%= erb :"components/list/info", :locals => {:line => line} %>
  <% line.actions.each do |action| %>
    <%= erb :"components/list/action", :locals => {:action => action} %>
  <% end %>
  </span>

</li>
