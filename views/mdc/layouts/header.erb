<header class="mdc-layout__header">
  <div class="mdc-layout-icon"></div>
  <div class="mdc-layout__header-row">
    <span class="mdc-layout__title"><%= header.title %></span>
    <div class="mdc-layout-spacer"></div>
    <% if header.menu %>
      <nav class="mdc-navigation">
        <% header.menu.items.each do |item| %>
          <a class="mdc-navigation__link" href="<%= item.url %>"><%= item.text %></a>
        <% end %>
      </nav>
    <% end %>
  </div>
</header>