
<% class_name = '' unless local_variables.include? :class_name
   parent_id = comp.event_parent_id unless local_variables.include? :parent_id
%>
<% if comp
     icon_name = comp.icon  unless locals.include? :icon_name
     if icon_name =~ /^fa-/
       icon_class_name = "fas #{icon_name}"
       icon = ''
     else
       icon_class_name = "material-icons"
       icon = icon_name
     end
%>
  <i  id="<%=comp.id%>"
      class="<%= class_name %> <%= icon_class_name %>
            <%= 'v-actionable' if comp.events %>"
     style="<%= "color: #{comp.color};" if comp.color %>
            <%= "font-size: #{comp.size}" if comp.size %>"
      <%= 'tabindex="1"' if class_name=='mdc-text-field__icon' && comp.events%>
     <%= erb :"components/event", :locals => {events: comp.events, parent_id: parent_id}%>>
    <%=icon%>
  </i>
  <%= erb :"components/tooltip", :locals => {comp: comp.tooltip, parent_id: comp.id} %>
<% end %>
