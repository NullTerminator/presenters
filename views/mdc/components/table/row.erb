<tr>
  <% row.columns.each do |col| %>
    <td class="<%= 'mdl-data-table__cell--non-numeric' unless col.numeric %>
               <%= 'v-actionable' if col.events %>"
        <%= erb :"components/event", :locals => {events: col.events, parent_id: col.event_parent_id}%>
    ><%= markdown(col.value.to_s) %></td>
  <% end %>
</tr>
