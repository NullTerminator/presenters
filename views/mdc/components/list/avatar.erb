<% if line.avatar %>
  <% if %w(jpg gif png).include?(line.avatar.avatar&.to_s.split('.').last) %>
    <img class="mdl-list__item-avatar
                <%= 'v-actionable' if line.avatar.event %>"
         id="<%=line.avatar.id%>"
         src="<%= line.avatar.avatar %>"
         <%= erb :"components/event", :locals => {event: line.avatar.event, parent_id: line.avatar.event_parent_id}%> />
  <% else %>
    <i class="material-icons mdl-list__item-avatar
              <%= 'v-actionable' if line.avatar.event %>"
       id="<%=line.avatar.id%>"
       <%= erb :"components/event", :locals => {event: line.avatar.event, parent_id: line.avatar.event_parent_id}%>><%= line.avatar.avatar %></i>
  <% end %>
<% end %>