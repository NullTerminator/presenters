<li class="mdc-list-item"
    id="<%=line.id%>">
  <span class="mdc-list-item__text
               <%= 'v-actionable' if line.events %>"
        <%= erb :"components/event", :locals => {events: line.events, parent_id: line.event_parent_id}%>>
    <%= erb :"components/list/icon", :locals => {:line => line} %>
    <%= erb :"components/list/avatar", :locals => {:line => line} %>
    <%= line.text&.text %>

    <% if line.subtitle %>
      <span class="mdc-list-item__secondary-text">
        <%=line.subtitle.text%>
      </span>
    <%end%>
    
    <% if line.body %>
      <span class="mdc-list-item__secondary-text">
        <%=line.body.text%>
      </span>
    <%end%>
  </span>
  <%= erb :"components/list/actions", :locals => {:line => line} %>
</li>
<% if line.separator %>
  <li role="separator" class="mdc-list-divider"></li>
<% end %>
