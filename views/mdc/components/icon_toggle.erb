<label class="mdl-icon-toggle mdl-js-icon-toggle mdl-js-ripple-effect mdv-icon-toggle" for="<%=comp.id%>">
  <input type="checkbox"
         id="<%=comp.id%>"
         class="mdl-icon-toggle__input"
         <%if comp.checked%> checked<%end%><%if comp.disabled%> disabled<%end%>
         <%= erb :"components/event", :locals => {event: comp.event, parent_id: comp.event_parent_id}%>>
  <i class="mdl-icon-toggle__label material-icons"><%=comp.icon%></i>
</label>
