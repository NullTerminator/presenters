<div class="mdc-text-field" data-mdc-auto-init="MDCTextField">
  <input type="text" class="mdc-text-field__input"
         id="<%= field.id %>"
         value="<%= field.value %>"
         <%= "pattern='#{field.pattern}'" if field.pattern %>
  >
  <label for="<%= field.id %>" class="mdc-text-field__label"><%= field.label %></label>
  <span class="mdc-textfield__error <% if field.error %> is-invalid<%end%>" ><%= field.error || field.hint%></span>
</div>
