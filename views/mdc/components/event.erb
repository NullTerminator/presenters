<% if events
     data_events = events.map do |event|
       [event.event,
        event.actions.map do |action|
          additional_params = case action.action_type.to_s
                                when 'replaces'
                                  {grid_nesting:@grid_nesting, __parent_id__: parent_id}
                                when 'update', 'post', 'delete'
                                  {__parent_id__: parent_id}
                                when 'snackbar'
                                  {text: action.params[:text]}
                                else
                                  {}
                              end
          [action.action_type, action.url, action.target, additional_params]
        end
       ]
     end %>
  data-events = '<%= data_events.to_json %>'
<% end %>
