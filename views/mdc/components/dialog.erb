<%
  has_form = comp.components.select {|c| eq(c.type, :form)}.any?
%>
<div id="<%= comp.id %>"
     <% if comp.tag %>
     data-input-tag="<%= comp.tag %>"
     <% end %>
     class="v-dialog mdc-dialog"
     role="alertdialog"
     aria-modal="true"
     aria-labelledby="my-dialog-title"
     aria-describedby="my-dialog-content"
     style="<%= "width: #{comp.width}" if comp.width %>
       <%= "height: #{comp.height}" if comp.height %>">
  <div class="mdc-dialog__container">
    <div class="mdc-dialog__surface">
      <!-- Title cannot contain leading whitespace due to mdc-typography-baseline-top() -->
      <% if comp.title %>
        <h2 class="mdc-dialog__title" id="my-dialog-title"><%= expand_text(comp.title.text) %></h2>
      <% end %>
      <div class="v-errors">
        <div class="mdc-dialog__content" id="my-dialog-content">
          <% comp.components.each do |dcomp| %>
            <%= erb :"components/#{dcomp.type}", :locals => {:comp => dcomp} %>
          <% end %>
        </div>
        <% if comp.buttons.any? %>
          <footer class="mdc-dialog__actions">
            <% comp.buttons.reverse.each do |button| %>
              <%= erb :"components/button",
                      :locals => {:comp => button,
                                  :class_name => "mdc-dialog__button #{eq(button.button_type, :raised) ? 'mdc-dialog__button--default' : nil}",
                                  :data_attributes => "data-mdc-dialog-action='#{button.id}'"} %>
            <% end %>
          </footer>
        <% end %>
      </div>
    </div>
  </div>
  <div class="mdc-dialog__scrim"></div>
</div>
